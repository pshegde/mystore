<% unless @cart.items.empty?   %>
  <table>
   <%# <%= render(:partial => "cart_item", :collection => @cart.items) <]%>
   <% for item in @cart.items %>
     <%if item == @current_item%>
       <tr id="current_item">
     <%else%>
        <tr>
      <%end%>
      <td><%=h item.qty %> &times; <%=item.product.title%></td>
      <td class="item-price"> <%=number_to_currency(item.product.price * item.qty)%></td>
    </tr>

    <%end%>
    <tr class="total-line">
      <td>Total</td>
      <td class="total-cell"> <%=number_to_currency(@cart.sum)%> </td>
    </tr>
  </table>
<%#<%=link_to "Empty cart", :action => :delete_all<] %>
<%=button_to 'Empty cart', {action: :delete_all}, method: 'get', data: { confirm: 'Are you sure?'} %>
<%end%>
